<script type="text/javascript">
  $( document ).ready( function(){
    //init
    var num = 1;
    $( '#meeting_meeting_instances' ).val(num);
    $( '#2, #3' ).hide();

    //increment everything for proper save amount in db
    $( '#new-event' ).click( function(){
      num++;
      $( '#' + num.toString() ).show();
      $( '#meeting_meeting_instances' ).val(num);
    });
  });
</script>

