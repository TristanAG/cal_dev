<script type="text/javascript">
  $( document ).ready( function(){
    var num = 1;
    init();

    //increment everything for proper save amount in db
    $( '#new-event' ).click( function( e ){
      e.preventDefault()
      if (num >= 1) {$( '#hide-event' ).show();}
      num++;
      $( '#' + num.toString() ).show();
      $( '#meeting_meeting_instances' ).val(num);
    });

    $( '#hide-event' ).click( function( e ){
      e.preventDefault()
      $( '#' + num.toString() ).hide();
      $( '#meeting_meeting_instances' ).val(num);
      num--;

      if(num == 1){ $( '#hide-event' ).hide(); }
    });

    function init(){
      //init

      $( '#meeting_meeting_instances' ).val(num);
      $( '#2, #3' ).hide();
      $( '#hide-event' ).hide();
    }
  });
</script>

